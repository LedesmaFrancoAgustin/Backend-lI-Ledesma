<div class="cart-page">
    <h1>Tu Carrito üõí</h1>

    {{#if cart.products.length}}
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart.products}}
                    <tr>
                        <td>{{this.product.title}}</td>
                        <td>{{this.quantity}}</td>
                        <td>${{this.product.price}}</td>
                        <td>${{multiply this.quantity this.product.price}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

        <h2>Total: ${{cartTotal cart.products}}</h2>

        <div class="cart-actions">
            <form action="/api/cart/empty" method="POST" style="display:inline-block;">
                <button type="submit" class="empty-cart-btn">Vaciar carrito</button>
            </form>

            <form action="/api/cart/{{cart._id}}/purchase" method="POST">
                <button type="submit" class="purchase-btn">Comprar ‚úÖ</button>
            </form>

        </div>

        <a href="/api/products" class="continue-shopping-btn">Seguir comprando üõçÔ∏è</a>
    {{else}}
        <p>Tu carrito est√° vac√≠o.</p>
        <a href="/api/products" class="continue-shopping-btn">Ver productos</a>
    {{/if}}
</div>
